{% extends "AppBundle::layout1.html.twig" %}
{% block title %}Affiche tous les oiseaux{% endblock %}
{% block body %}
    <h1>Affichage des oiseaux.</h1>
    <br>
    <div class="center">
        <p>Total d'oiseaux : {{ pagination.getTotalItemCount }}</p>
    </div>
    <br>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Famille' , 'taxrefv10.Famille') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nom scientifique', 'taxrefv10.LbNom') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nom auteur', 'taxrefv10.LbAuteur') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nom Vern. Fr', 'taxrefv10.NomVern') }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for oiseau in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ oiseau.Famille }}</td>
                <td>{{ oiseau.LbNom }}</td>
                <td>{{ oiseau.LbAuteur }}</td>
                <td>{{ oiseau.NomVern }}</td>
                <td>
                    <p>
                        <a class="btn btn-primary btn-xs" href="{{ path('view_one_bird', {'id': oiseau.id}) }}">Voir la fiche</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}



